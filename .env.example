# ClearCouncil Configuration
# Copy this file to .env and update with your settings

# GitHub Personal Access Token (required for free AI chat models)
# Get yours at: https://github.com/settings/tokens
# Required scopes: 'repo' and 'user'
GITHUB_TOKEN=your_github_token_here

# OpenAI API Key (optional, for existing ClearCouncil features)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///data/clearcouncil.db

# Web Interface Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your_secret_key_here

# Chat Application Configuration
PORT=5002
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO

# ClearCouncil Next (agent-first runtime)
CC_NEXT_ENVIRONMENT=dev
CC_NEXT_API_HOST=0.0.0.0
CC_NEXT_API_PORT=8080
CC_NEXT_DATABASE_URL=sqlite:///./clearcouncil_next.db
CC_NEXT_WORKER_POLL_SECONDS=5

# Optional: used by GitHub Actions autonomous workflow
CC_NEXT_API_URL=http://localhost:8080
CC_NEXT_API_TOKEN=